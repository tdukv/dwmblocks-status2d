#!/bin/sh

printf "^C3^["

hour=$(date '+%I')
min=$(date '+%M')

if [ "$min" -lt "15" ]; then
    case "$hour" in
        "00") icon="ğŸ•›" ;;
        "01") icon="ğŸ•" ;;
        "02") icon="ğŸ•‘" ;;
        "03") icon="ğŸ•’" ;;
        "04") icon="ğŸ•“" ;;
        "05") icon="ğŸ•”" ;;
        "06") icon="ğŸ••" ;;
        "07") icon="ğŸ•–" ;;
        "08") icon="ğŸ•—" ;;
        "09") icon="ğŸ•˜" ;;
        "10") icon="ğŸ•™" ;;
        "11") icon="ğŸ•š" ;;
        "12") icon="ğŸ•›" ;;
        *) icon="Err!";;
    esac
elif [ "$min" -lt "45" ]; then
    case "$hour" in
        "00") icon="ğŸ•œ" ;;
        "01") icon="ğŸ•" ;;
        "02") icon="ğŸ•" ;;
        "03") icon="ğŸ•" ;;
        "04") icon="ğŸ•Ÿ" ;;
        "05") icon="ğŸ• " ;;
        "06") icon="ğŸ•¡" ;;
        "07") icon="ğŸ•¢" ;;
        "08") icon="ğŸ•£" ;;
        "09") icon="ğŸ•¤" ;;
        "10") icon="ğŸ•¥" ;;
        "11") icon="ğŸ•¦" ;;
        "12") icon="ğŸ•§" ;;
        *) icon="Err!";;
    esac
else
    case "$hour" in
        "12") icon="ğŸ•" ;;
        "00") icon="ğŸ•" ;;
        "01") icon="ğŸ•‘" ;;
        "02") icon="ğŸ•’" ;;
        "03") icon="ğŸ•“" ;;
        "04") icon="ğŸ•”" ;;
        "05") icon="ğŸ••" ;;
        "06") icon="ğŸ•–" ;;
        "07") icon="ğŸ•—" ;;
        "08") icon="ğŸ•˜" ;;
        "09") icon="ğŸ•™" ;;
        "10") icon="ğŸ•š" ;;
        "11") icon="ğŸ•›" ;;
        *) icon="Err!";;
    esac
fi

date "+%a %d %b clk%R]^d^" | sed "s/clk/$icon/"
