#!/bin/sh

[ ! -d /sys/class/power_supply/BAT0 ] && printf "^w^^r0,0,28,19^^f4^^w^^r0,7,2,5^^r2,4,20,11^^w^^r3,5,18,9^^w^^f24^ðŸš« N/A^d^\n" && exit 0

for BAT in /sys/class/power_supply/BAT* ; do
    read -r cap < "$BAT/capacity"

    fullpx=$((cap/6))
    emptpx=$((20-fullpx))

    bat="^w^^r0,0,28,19^^f4^^w^^r0,7,2,5^^r2,4,20,11^^w^^r3,5,18,9^^w^^r${emptpx},6,${fullpx},7^^f24^"

    status=$(sed "s/Not charging/ðŸš«/; s/Charging/ïƒ§/; s/Discharging/â¬/; s/Unknown/â‰/; s/Full/âœ”/; s/[A-Za-z]*//" "$BAT/status")

    printf "%s%s%3s%%" "$bat" "$status" "$cap"
done

printf "\n"
