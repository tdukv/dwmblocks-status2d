#!/bin/sh

hourmin=$(date -d "+15min" '+%I;%M')

if [ "${hourmin#*;}" -gt 30 ]; then
    hour="${hourmin%;*}30"
else
    hour="${hourmin%;*}00"
fi

case "$hour" in
    "0000") icon="ğŸ•›" ;;
    "0100") icon="ğŸ•" ;;
    "0200") icon="ğŸ•‘" ;;
    "0300") icon="ğŸ•’" ;;
    "0400") icon="ğŸ•“" ;;
    "0500") icon="ğŸ•”" ;;
    "0600") icon="ğŸ••" ;;
    "0700") icon="ğŸ•–" ;;
    "0800") icon="ğŸ•—" ;;
    "0900") icon="ğŸ•˜" ;;
    "1000") icon="ğŸ•™" ;;
    "1100") icon="ğŸ•š" ;;
    "1200") icon="ğŸ•›" ;;
    "0030") icon="ğŸ•§" ;;
    "0130") icon="ğŸ•œ" ;;
    "0230") icon="ğŸ•" ;;
    "0330") icon="ğŸ•" ;;
    "0430") icon="ğŸ•Ÿ" ;;
    "0530") icon="ğŸ• " ;;
    "0630") icon="ğŸ•¡" ;;
    "0730") icon="ğŸ•¢" ;;
    "0830") icon="ğŸ•£" ;;
    "0930") icon="ğŸ•¤" ;;
    "1030") icon="ğŸ•¥" ;;
    "1130") icon="ğŸ•¦" ;;
    "1230") icon="ğŸ•§" ;;
    *) icon="Err!";;
esac

date "+%a %d %b clk%R" | sed "s/clk/$icon/"
