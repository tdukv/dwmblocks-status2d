#!/bin/sh

vol=$(pamixer --get-volume --get-mute)

if [ -n "${vol%%false*}" ] ; then
    printf "ğŸ”‡%3s%%\n" "${vol##* }"
elif [ "${vol##* }" -eq 0 ]; then
    printf "ğŸ”‡%3s%%\n" "${vol##* }"
elif [ "${vol##* }" -gt 66 ]; then
    printf "ğŸ”Š%3s%%\n" "${vol##* }"
elif [ "${vol##* }" -gt 33 ]; then
    printf "ğŸ”‰%3s%%\n" "${vol##* }"
else
    printf "ğŸ”ˆ%3s%%\n" "${vol##* }"
fi

